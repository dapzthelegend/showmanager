<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">@color/primary</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/primary</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar  -->
        <item name="android:statusBarColor" tools:targetApi="m">@color/white</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>


    <!--Text appearances-->
    <style name="TextAppearance.Title" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_bold</item>
    </style>

    <!--Button apperances-->
    <style name="Button.Filled" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_background_filled</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@drawable/text_selector_white</item>
        <item name="textAllCaps">false</item>
        <item name="height">50dp</item>
    </style>

    <style name="Button.Outlined" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_background_light</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@drawable/text_selector_primary</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <style name="Button.RoundedCorners" parent="@style/Widget.AppCompat.Button">
        <item name="android:background">@drawable/rounded_background</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:textColor">@drawable/text_selector_primary</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--Edittext appearances-->
    <style name="Edittext.Filled" parent="@style/Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_regular</item>
        <item name="android:background">@drawable/rounded_background</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">20dp</item>
        <item name="android:paddingEnd">20dp</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="TextAppearance.Body" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/black</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>
</resources>


